<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.birdle.BirdleActivity">
    <ImageView
            android:layout_width="306dp"
            android:layout_height="396dp" app:srcCompat="@drawable/birdle" android:id="@+id/birdleImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp" android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/welcomeText" android:layout_marginEnd="53dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp" android:contentDescription="@string/birdle_image"/>
    <TextView
            android:text="@string/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/welcomeText"
            android:textSize="24sp" android:textColor="#53241D"
            android:textStyle="bold" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/birdleImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="107dp"
            android:layout_marginEnd="107dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>